{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RecordingData",
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "enum": [0]
    },
    "metadata": {
      "$ref": "#/definitions/RecordingMetadata"
    },
    "frames": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/RecordingFrameData"
      }
    }
  },
  "required": ["version", "metadata", "frames"],
  "definitions": {
    "RecordingMetadata": {
      "type": "object",
      "properties": {
        "sceneName": {
          "type": "string"
        },
        "fps": {
          "$ref": "#/definitions/FrameRate"
        }
      },
      "required": ["sceneName", "fps"]
    },
    "RecordingFrameData": {
      "type": "object",
      "properties": {
        "frame": {
          "type": "integer"
        },
        "timeCode": {
          "type": "number"
        },
        "trackers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RecordingTrackerData"
          }
        }
      },
      "required": ["frame", "timeCode", "trackers"]
    },
    "RecordingTrackerData": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/TrackableID"
        },
        "transform": {
          "$ref": "#/definitions/TransformData"
        }
      },
      "required": ["id", "transform"]
    },
    "TransformData": {
      "type": "object",
      "properties": {
        "position": {
          "$ref": "#/definitions/Vector3"
        },
        "rotation": {
          "$ref": "#/definitions/Quaternion"
        },
        "scale": {
          "$ref": "#/definitions/Vector3"
        }
      },
      "required": ["position", "rotation", "scale"]
    },
    "FrameRate": {
      "type": "object",
      "properties": {
        "numerator": {
          "type": "integer"
        },
        "denominator": {
          "type": "integer"
        }
      },
      "required": ["numerator", "denominator"]
    },
    "TrackableID": {
      "type": "object",
      "properties": {
        "internal": {
          "type": "integer"
        }
      },
      "required": ["internal"]
    },
    "Vector3": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        }
      },
      "required": ["x", "y", "z"]
    },
    "Quaternion": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        },
        "w": {
          "type": "number"
        }
      },
      "required": ["x", "y", "z", "w"]
    }
  }
}